@model MotCreateViewModel

<partial name="_Breadcrumbs" model=@(new [] { ("/", "Home"), ("/mot", "Mots"), ("","Create") })>

<h3 class="mt-4 mb-4">Add New Mot Record </h3>

<div class="card rounded shadow p-3">
<form asp-action="Create">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group"
    
         <input type ="hidden" label asp-for="VehicleId" class="form-control"></label> 
    
        <div class="form-group">
                        <label asp-for="VehicleId" class="control-label"></label>
                        <textarea rows="1" asp-for="VehicleId" class="form-control"></textarea>
                        <span asp-validation-for="VehicleId" class="text-danger"></span>
                    </div>
        @* <select asp-for="VehicleId" class="form-control" 
                asp-items="@Model.Vehicles"))">
            <option>Select Vehicle</option>
        </select> *@
        @* <span asp-validation-for="VehicleId" class="text-danger"></span> *@
    </div>

    <div class="mt-3">
        <label asp-for="Report" class="form-label"></label>      
        <textarea rows="5" asp-for="Report" class="form-control"></textarea>
        <span asp-validation-for="Report" class="text-danger"></span>
    </div>

    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <textarea rows="1" asp-for="Name" class="form-control"></textarea>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- text area for user to input rating -->
                    <div class="form-group">
                        <label asp-for="mileage" class="control-label"></label>
                        <input rows="1" asp-for="mileage" class="form-control"></input>
                        <span asp-validation-for="mileage" class="text-danger"></span>
                    </div>

                    <!-- text area for user to input comment -->
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <textarea rows="1" asp-for="Status" class="form-control"></textarea>
                        <span asp-validation-for="Status" class="text-danger"></span> 
                    </div>
   
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary"/>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </div>
    

</form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}