@model Vehicle

<partial name="_Breadcrumbs" model=@(new [] { ("/", "Home"), ("/vehicle", "Vehicles"), ("", "Create") })>
  
    <div class="card rounded shadow p-3">

        <h3 class="mb-4">CreateVehicle</h3>

        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- hidden ID --- not be editable by user but must be passed -->
            <!-- to controller so that movie is correctly edited -->
            <input type="hidden" asp-for="VehicleId" class="form-control" />

            <!-- form groups to display different movie attributes for editing -->

            <div class="form-group">
                <label asp-for="Reg" class="control-label"></label>
                <input asp-for="Reg" class="form-control" />
                <span asp-validation-for="Reg" class="text-danger"></span>
            </div>
            <div class ="row">
            <div class="form-group col">
                <label asp-for="Make" class="control-label"></label>
                <input asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>

            <!--year and duration in one row -->
        
                <div class="form-group col">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                </div>

                <div class ="row">
                <div class="form-group col">
                    <label asp-for="Year" class="control-label"></label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="form-group col">
                    <label asp-for="Doors" class="control-label"></label>
                    <input asp-for="Doors" class="form-control" />
                    <span asp-validation-for="Doors" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="FuelType" class="control-label"></label>
                <input asp-for="FuelType" class="form-control" />
                <span asp-validation-for="FuelType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BodyType" class="control-label"></label>
                <input asp-for="BodyType" class="form-control" />
                <span asp-validation-for="BodyType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TransmissionType" class="control-label"></label>
                <input asp-for="TransmissionType" class="form-control" />
                <span asp-validation-for="TransmissionType" class="text-danger"></span>
            </div>

            <!-- PosterUrl input group with input type of url -->
            @* <div class="form-group">
                <label asp-for="PosterUrl" class="control-label"></label>
                <input type="url" asp-for="PosterUrl" class="form-control" />
                <span asp-validation-for="PosterUrl" class="text-danger"></span>
            </div> *@


            <!-- submit button and cancel link which navigates to Movie Index action -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="index">Cancel</a>
            </div>
        </form>
    </div>

     @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    } 