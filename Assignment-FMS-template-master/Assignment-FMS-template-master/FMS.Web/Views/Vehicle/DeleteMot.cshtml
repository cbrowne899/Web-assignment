@model Mot
<partial name="_Breadcrumbs" model=@(new []{ ("/","Home"), ("/mot","Mots"), ("","Delete") })>
    <div>
        <!-- displays reviews with all the review details to ensure user is deleting
             the correct review -->
        <div class="col card rounded shadow pt-3">

            <h3 class="mb-4">Delete MOT History</h3>

            <h5 class="mb-4">Are you sure you want to delete this Mot?</h4>
                <dl class="row">

                    <dt class="col-5">Name</dt>
                    <dd class="col-7">@Model.Name</dd>

                    <dt class="col-5">Mot Date</dt>
                    <dd class="col-7">@Model.MotDate</dd>

                    <dt class="col-5">Mileage</dt>
                    <dd class="col-7">@Model.mileage</dd>

                    <dt class="col-5">Status</dt>
                    <dd class="col-7">@Model.Status</dd>

                    <dt class="col-5">Report</dt>
                    <dd class="col-7">@Model.Report</dd>

                </dl>
        </div>

        <div class="mt-4">
            <!-- Form with buttons to submit post request to DeleteConfirmReview in
             Movie controller and a cancel button to return user to movie 
             index-->
            <form asp-controller="Movie" asp-action="DeleteConfirmReview" type="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Confirm" class="btn btn-danger" />
                <a class="btn btn-link" asp-controller="Vehicle" asp-action="Index">Cancel</a>
            </form>
        </div>

    </div>
