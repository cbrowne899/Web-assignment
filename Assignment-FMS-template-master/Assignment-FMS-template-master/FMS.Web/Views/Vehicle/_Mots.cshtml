@model Vehicle

@if (Model.Mots.Count == 0)
{
    <div class="card rounded shadow p-4"><h2>No Mot Records for this Vehicle Currently.</h2></div>
}

else
{   <div class="card rounded shadow p-4">
    <table class="table table-striped mt-2">
            <thead class="thead-dark">
                <tr>
                    <th>Mot History</th>
                </tr>
                <tr>
                    <th>Name</th>
                    <th>Mot Date</th>
                    <th>Mileage</th>
                    <th>Status</th>
                    <th>Report</th>
                    <th>Action</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model.Mots)
                {
                    <tr>
                        <td>@m.Name</td>
                        <td>@m.MotDate</td>
                        <td>@m.mileage</td>
                        <td>@m.Status</td>
                        <td>@m.Report</td>
                        <td>
                            
                    @* <a asp-action="DeleteMot" asp-route-id="@m.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i>Delete
                            </a> *@

                            <a asp-controller="Vehicle" asp-action="Delete" asp-route-id=@m.VehicleId class="btn btn-sm btn-danger">
                                 <i class="bi bi-trash"></i></a>
                
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}